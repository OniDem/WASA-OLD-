<Window x:Class="WASA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WASA"
        mc:Ignorable="d"
        Title="WASA:Учёт товара и продаж" WindowStartupLocation="CenterScreen" Height="600" Width="1024">
	<Grid>
		<StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Click="NewSell_Click" Width="90" Height="30" Margin=" 10 10 10 50" Background="#9946D232">Смена</Button>
            <Button Click="WareHouse_Click" Width="90" Height="30" Margin=" 10 10 10 50"  Background="BurlyWood">Товар</Button>
            <Button Click="Defect_Click" Width="90" Height="30" Margin=" 10 10 10 50" Background="Bisque">Брак</Button>
            <Button x:Name="Total" Width="90" Height="30" Margin=" 10 10 10 50" IsEnabled="False" Background="#99D629E6">In progress</Button>
            <Button Click="Exit_Click" Width="90" Height="30" Margin=" 10 10 10 50" Background="#FFE82B2B">Выход</Button>
        </StackPanel>
        <Button Click="Update_Click" Width="90" Height="30" Margin="10 60 10 10" HorizontalAlignment="Right" VerticalAlignment="Top" IsEnabled="False" Background="Aquamarine">Обновить</Button>
	</Grid>
</Window>

